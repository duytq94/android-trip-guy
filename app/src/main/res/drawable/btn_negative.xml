<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="3dp" android:color="@android:color/holo_red_dark" />
            <gradient android:angle="-90" android:endColor="@android:color/holo_red_dark" android:startColor="@android:color/holo_red_dark" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="3dp" android:color="@android:color/holo_red_light" />
            <gradient android:angle="-90" android:endColor="@android:color/holo_red_light" android:startColor="@android:color/holo_red_light" />
        </shape>
    </item>
</selector>